<div class="container">
    <div class="o-hidden border-0 rounded-lg my-5 mx-auto">
        <div class="card-body p-0">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">Editar <b><%= @user.username %></b></h2>
                        </div>
                        <div class="card-body">
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "user" }) do |f| %>
                            <%= render "devise/shared/error_messages", resource: resource %>

                            <div class="mb-3">
                                <%= f.label :username, "Nome de Usuário", class: "form-label" %>
                                <%= f.text_field :username, class: "form-control" %>
                            </div>

                            <div class="mb-3">
                                <%= f.label :cpf, "CPF", class: "form-label" %>
                                <%= f.text_field :cpf, class: "form-control", placeholder: "123.456.789-00" %>
                            </div>

                            <div class="mb-3">
                                <%= f.label :phone_number, "Número de Celular", class: "form-label" %>
                                <%= f.text_field :phone_number, class: "form-control", placeholder: "(88) 98888-8888" %>
                            </div>

                            <div class="mb-3">
                                <%= f.label :birthdate, "Data de Nascimento", class: "form-label" %>
                                <%= f.date_field :birthdate, class: "form-control" %>
                            </div>

                            <div class="mb-3 form-check">
                                <%= f.check_box :ufrn_student, class: "form-check-input", id: "ufrn_student_checkbox" %>
                                <%= f.label :ufrn_student, "É estudante da UFRN?", class: "form-check-label" %>
                            </div>

                            <div class="mb-3" id="ufrn_registration_field">
                                <%= f.label :ufrn_registration_number, "Matrícula da UFRN", class: "form-label" %>
                                <%= f.text_field :ufrn_registration_number, class: "form-control", placeholder: "Matrícula da UFRN" %>
                            </div>

                            <div class="mb-3">
                                <%= f.label :email, "Endereço de E-mail", class: "form-label" %>
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                            </div>

                            <div class="mb-3">
                                <%= f.label :password, "Senha", class: "form-label" %>
                                <small class="form-text text-muted">(deixe em branco se não quiser alterar)</small>
                                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                            </div>

                            <div class="mb-3">
                                <%= f.label :password_confirmation, "Confirmação de Senha", class: "form-label" %>
                                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                            </div>

                            <div class="mb-3">
                                <%= f.label :current_password, "Senha Atual", class: "form-label" %>
                                <small class="form-text text-muted">(necessário para confirmar as alterações)</small>
                                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
                            </div>

                            <div class="actions">
                                <%= f.submit "Atualizar", class: "btn btn-primary w-100" %>
                            </div>
                            <% end %>
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-header">
                            <h3 class="card-title">Cancelar minha conta</h3>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">Deseja cancelar sua conta?</p>
                            <%= button_to "Cancelar minha conta", registration_path(resource_name), 
                            data: { confirm: "Tem certeza?", turbo_confirm: "Tem certeza?" }, 
                            method: :delete, 
                            class: "btn btn-danger w-100" %>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <%= link_to "Voltar", :back, class: "btn btn-outline-secondary" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const checkbox = document.getElementById("ufrn_student_checkbox");
        const registrationField = document.getElementById("ufrn_registration_field");

        function toggleRegistrationField() {
            if (checkbox.checked) {
                registrationField.style.display = "block";
            } else {
                registrationField.style.display = "none";
            }
        }

        checkbox.addEventListener("change", toggleRegistrationField);
        toggleRegistrationField();
    });
</script>