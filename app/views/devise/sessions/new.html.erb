<div class="container">
    <div class="card o-hidden border-0 rounded-lg shadow-lg my-3 mx-auto glassmorphism" style="max-width: 700px;">
        <div class="card-body p-0">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="m-5">
                        <div class="text-left mb-4">
                            <%= link_to root_path, class: "btn btn-outline-secondary" do %>
                            <i class="fas fa-arrow-left"></i>&nbsp;Voltar
                            <% end %>
                        </div>
                        <div class="text-center">
                            <h2 class="h2 text-gray-900 mb-4">Entrar na PIAF</h2>
                        </div>
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "user" }) do |f| %>
                        <div class="form-group mb-3">
                            <%= f.email_field :email, class: "form-control", id: "exampleInputEmail", aria: { describedby: "emailHelp" }, placeholder: "Digite seu endereÃ§o de e-mail..." %>
                        </div>
                        <div class="form-group mb-3">
                            <%= f.password_field :password, class: "form-control", id: "exampleInputPassword", placeholder: "Sua senha...", autocomplete: "current-password" %>
                        </div>
                        <% if devise_mapping.rememberable? %>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox small">
                                <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheck" %>
                                <%= f.label :remember_me, class: "custom-control-label", for: "customCheck" %>
                            </div>
                        </div>
                        <% end %>
                        <div class="actions">
                            <div class="text-center">
                                <%= f.submit "Entrar no sistema", class: "btn btn-danger" %>
                            </div>
                            <% end %>
                            <hr />
                            <div class="text-center">
                                <%= render "devise/shared/links" %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-auto mb-4">
                    <span class="text-muted me-1">Desenvolvido pela</span>
                    <%= link_to 'https://www.otsuki.dev', target: '_blank', rel: 'noopener noreferrer' do %>
                    <%= image_tag 'otsuki-logo.svg', alt: 'Logo Otsuki', style: 'max-height: 30px; vertical-align: middle;', draggable: 'false', ondragstart: 'return false;', oncontextmenu: 'return false;' %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .glassmorphism {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    }
</style>