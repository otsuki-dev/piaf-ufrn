<header class="navbar navbar-expand-md navbar-light d-print-none">
  <div class="container-xl">
    <h1 class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
      <%= link_to 'PIAF/UFRN', root_path, class: 'navbar-brand' %>
    </h1>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse " id="navbarCollapse">
      <div class="navbar-nav flex-row order-md-last ms-auto">
        <% if user_signed_in? %>
          <div class="nav-item dropdown">
            <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown">
              <img
              alt="User avatar"
              src="<%= "https://api.dicebear.com/9.x/dylan/svg?seed=#{ @random_name }" %>"
              class="avatar"
              />
              <div class="d-none d-xl-block ps-2">
                <div><%= current_user.username %></div>
                <div class="mt-1 small text-muted"><%= current_user.email %></div>
              </div>
            </a>
            <div class="dropdown-menu dropdown-menu-end">
              <% if current_user.admin? %>
                <%= link_to 'Administração', admin_dashboard_path, class: 'dropdown-item' %>
              <% end %>                  
              <%= link_to 'Perfil', edit_user_registration_path, class: 'dropdown-item' %>
              <%= button_to 'Sair', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </div>
        <% else %>
          <div class="nav-item">
            <%= link_to 'Entrar', new_user_session_path, class: 'nav-link' %>
          </div>
          <div class="nav-item">
            <%= link_to 'Cadastrar', new_user_registration_path, class: 'nav-link' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>