<h1 class="mb-4">Lista de Instrutores</h1>

<% if @instrutores.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th>Nome</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% @instrutores.each do |instrutor| %>
          <tr>
            <td><strong><%= instrutor.username %></strong></td>
            <td class="text-muted"><%= instrutor.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-warning" role="alert">
    Não há instrutores cadastrados.
  </div>
<% end %>
