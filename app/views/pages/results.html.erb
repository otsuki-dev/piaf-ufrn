<div class="container mt-4">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="mb-4">Resultados</h1>
        </div>
    </div>
    
    <% if @past_courses.any? %>
        <div class="row">
            <% @past_courses.each do |course| %>
                <div class="col-md-6 col-lg-4">
                    <%= link_to results_course_path(course, format: :pdf), target: "_blank", class: "text-decoration-none" do %>
                        <div class="card shadow-sm mb-4 border-0">
                            <div class="card-body">
                                <h5 class="card-title text-primary">
                                    <i class="bi bi-bookmark-fill"></i> <%= course.modality %>
                                </h5>
                                <p class="card-text text-muted mb-1">
                                    <i class="bi bi-clock"></i> Horário: <%= course.class_time %>
                                </p>
                                <p class="card-text text-muted mb-1">
                                    <i class="bi bi-calendar"></i> Início: <%= course.start_date.strftime("%d/%m/%Y") %>
                                </p>
                                <p class="card-text text-muted">
                                    <i class="bi bi-calendar-check"></i> Término: <%= course.end_date.strftime("%d/%m/%Y") %>
                                </p>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    <% else %>
        <div class="row">
            <div class="col-12 text-center">
                <p class="text-muted">Nenhum curso com inscrições encerradas.</p>
            </div>
        </div>
    <% end %>
</div>